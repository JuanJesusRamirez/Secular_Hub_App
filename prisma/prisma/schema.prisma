generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model OutlookCall {
  id                   String  @id // Using Excel ID (String)
  year                 Int
  institution          String
  institutionCanonical String  @map("institution_canonical") // Normalized name
  theme                String
  subTheme             String? @map("sub_theme")
  themeCategory        String  @map("theme_category") // Computed
  sectionDescription   String? @map("section_description")
  callText             String? @map("call_text")
  rank                 Int?
  convictionTier       String  @map("conviction_tier") // high, medium, low
  wordCount            Int     @map("word_count") // Computed

  // AI generation metadata
  subThemeGenerated    Boolean   @default(false) @map("sub_theme_generated")
  subThemeConfidence   Float?    @map("sub_theme_confidence")
  sectionDescGenerated Boolean   @default(false) @map("section_desc_generated")
  sectionDescConfidence Float?   @map("section_desc_confidence")
  needsReview          Boolean   @default(false) @map("needs_review")
  reviewedAt           DateTime? @map("reviewed_at")
  generatedAt          DateTime? @map("generated_at")

  @@map("outlook_calls")
}

// Human review queue for low-confidence AI generations
model ReviewQueue {
  id             String    @id @default(cuid())
  outlookCallId  String    @map("outlook_call_id")
  field          String    // "subTheme" or "sectionDescription"
  generatedValue String    @map("generated_value")
  confidence     Float
  status         String    @default("pending") // pending, approved, rejected, edited
  reviewedBy     String?   @map("reviewed_by")
  reviewedAt     DateTime? @map("reviewed_at")
  finalValue     String?   @map("final_value")
  createdAt      DateTime  @default(now()) @map("created_at")

  @@map("review_queue")
  @@index([status])
  @@index([outlookCallId])
}

// Track migration runs for resume capability
model MigrationRun {
  id              String    @id @default(cuid())
  startedAt       DateTime  @default(now()) @map("started_at")
  completedAt     DateTime? @map("completed_at")
  totalRecords    Int       @map("total_records")
  processedCount  Int       @default(0) @map("processed_count")
  errorCount      Int       @default(0) @map("error_count")
  lastProcessedId String?   @map("last_processed_id")
  status          String    @default("running") // running, completed, failed, paused

  @@map("migration_runs")
}

// Pre-computed word cloud cache for fast loading
model WordCloudCache {
  id          String   @id @default(cuid())
  year        Int      // Year filter (0 = all years)
  mode        String   // 'words' or 'phrases'
  scoring     String   // 'frequency' or 'importance'
  wordLimit   Int      @map("word_limit") // 50, 100, or 150
  data        String   // JSON stringified word cloud data
  totalDocs   Int      @map("total_docs")
  uniqueInst  Int      @map("unique_inst")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@unique([year, mode, scoring, wordLimit])
  @@map("word_cloud_cache")
}

// Pre-computed sentiment cache for instant lookups
model SentimentCache {
  id              String   @id @default(cuid())
  term            String   @unique
  label           String   // 'positive', 'negative', 'neutral'
  score           Float
  normalizedScore Float    @map("normalized_score")
  source          String   @default("dictionary") // 'dictionary' or 'finbert'
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("sentiment_cache")
}
